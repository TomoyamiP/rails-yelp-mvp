<div class="container mt-4">
  <h1 class="mb-4"><%= @restaurant.name %></h1>
  <div class="card mb-4">
    <div class="card-body">
      <p><strong>Address:</strong> <%= @restaurant.address %></p>
      <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
      <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
    </div>
  </div>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">Reviews</h3>
  </div>
  <% if @reviews.any? %>
    <ul class="list-group mb-4">
      <% @reviews.each do |review| %>
        <li class="list-group-item">
          <strong>Rating:</strong> <%= review.rating %> / 5<br>
          <%= review.content %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No reviews yet.</p>
  <% end %>
  <h4>Add a Review</h4>
  <%= simple_form_for [@restaurant, @restaurant.reviews.build] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (1..5), as: :select %>
    <%= f.button :submit, "Add Review", class: "btn btn-primary mt-3" %>
  <% end %>
  <%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
</div>
